<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_200"
    tools:context=".Ui.HomeUserActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hai_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Hai !"
                            android:textColor="@color/black"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/nama_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hai_txt"
                            android:layout_alignParentStart="true"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Memuat..."
                            android:textColor="@color/orange_200"
                            android:textSize="26sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_profile_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_potoUser"
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_alignParentEnd="true"
                            app:civ_border_color="@color/orange_500"
                            app:civ_border_overlay="true"
                            app:civ_border_width="3dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:src="@drawable/ic_baseline_account_circle_24" />

                        <ImageView
                            android:id="@+id/panah2"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:background="@drawable/bulat_putih"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            app:tint="@color/orange_200"
                            android:src="@drawable/icon_arrow_right" />

                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/label_txt"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Sekarang jangan khawatir lagi soal mobil mogok"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/blackPencil"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/poto_history"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="@color/white"
                            android:src="@drawable/icon_history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/poto_history"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Riwayat Pesanan"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/panah6"
                            android:layout_width="40px"
                            android:layout_height="40px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            app:tint="@color/orange_200"
                            android:src="@drawable/icon_arrow_right" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/label1_txt"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Layanan"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/help_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/poto_townow"
                            android:layout_width="300px"
                            android:layout_height="300px"
                            android:padding="10dp"
                            android:src="@drawable/ic_undraw_towing" />

                        <TextView
                            android:id="@+id/labelTowNow_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/poto_townow"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Derek Sekarang"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/labelTowNow_txt"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/poto_townow"
                            android:fontFamily="@font/poppins_light"
                            android:text="Jawaban jika Anda mengalami mogok"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

