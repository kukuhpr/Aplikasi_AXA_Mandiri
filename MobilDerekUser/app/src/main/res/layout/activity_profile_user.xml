<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:background="@color/orange_200"
    tools:context=".Ui.ProfileUserActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="5dp"
        app:cardElevation="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">


                        <LinearLayout
                            android:id="@+id/profil_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/btnBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:outlineAmbientShadowColor="@android:color/transparent"
                                    android:outlineSpotShadowColor="@android:color/transparent"
                                    android:src="@drawable/icons_back"
                                    app:backgroundTint="@color/orange_200"
                                    app:fabSize="mini" />


                            </LinearLayout>


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_profileRider"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:gravity="center"
                                android:src="@drawable/ic_baseline_account_circle_24"
                                app:civ_border_color="@color/orange_500"
                                app:civ_border_overlay="true"
                                app:civ_border_width="3dp" />

                            <TextView
                                android:id="@+id/tv_nameRider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Memuat..."
                                android:textColor="@color/black"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_emailRider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Memuat..."
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label1_txt"
                                    style="@style/TextAppearance.AppCompat.Headline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Akun"
                                    android:textColor="@color/orange_200"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />


                                <RelativeLayout
                                    android:id="@+id/RL_editRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/poto_towedit"
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:layout_alignParentStart="true"
                                        android:src="@drawable/icon_editprofile"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/edit_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@+id/poto_towedit"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="Edit Profil"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/panah2"
                                        android:layout_width="40px"
                                        android:layout_height="40px"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"
                                        android:src="@drawable/icon_arrow_right"
                                        app:tint="@color/orange_200" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/panah2"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/back_grey" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/RL_changePassRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center_vertical"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/poto_towhchangePass"
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:layout_alignParentStart="true"
                                        android:src="@drawable/ic_baseline_vpn_key_24"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/changePass_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@+id/poto_towhchangePass"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="Ganti Password"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/panah1"
                                        android:layout_width="40px"
                                        android:layout_height="40px"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"
                                        android:src="@drawable/icon_arrow_right"
                                        app:tint="@color/orange_200" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/panah1"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/back_grey" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/RL_historyRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center_vertical"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/poto_towhistory"
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:layout_alignParentStart="true"
                                        android:src="@drawable/icon_history"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/history_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@+id/poto_towhistory"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="Riwayat Pesanan"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/panah"
                                        android:layout_width="40px"
                                        android:layout_height="40px"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"
                                        android:src="@drawable/icon_arrow_right"
                                        app:tint="@color/orange_200" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/panah"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/back_grey" />


                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/label2_txt"
                                    style="@style/TextAppearance.AppCompat.Headline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Info Lainnya"
                                    android:textColor="@color/orange_200"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:id="@+id/RL_feedBackRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center_vertical"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/poto_towfeedBack"
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:layout_alignParentStart="true"
                                        android:src="@drawable/ic_baseline_feedback_24"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/feedback_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@+id/poto_towfeedBack"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="Umpan Balik"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/panah3"
                                        android:layout_width="40px"
                                        android:layout_height="40px"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"
                                        android:src="@drawable/icon_arrow_right"
                                        app:tint="@color/orange_200" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/panah3"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/back_grey" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/RL_logoutRider"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center_vertical"
                                    android:padding="5dp">

                                    <ImageView
                                        android:id="@+id/poto_towLogout"
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:layout_alignParentStart="true"
                                        android:src="@drawable/icon_signout"
                                        app:tint="@color/black" />

                                    <TextView
                                        android:id="@+id/logout_txt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_toRightOf="@+id/poto_towLogout"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="Keluar"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:id="@+id/panah5"
                                        android:layout_width="40px"
                                        android:layout_height="40px"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="20dp"
                                        android:src="@drawable/icon_arrow_right"
                                        app:tint="@color/orange_200" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:layout_below="@+id/panah5"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/back_grey" />


                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

        </ScrollView>



    </androidx.cardview.widget.CardView>



</RelativeLayout>